{% extends 'base.html.twig' %}


{% block body %}
    <div class="container my-5">
        <h1>Espace membre</h1>

        <div class="row">
            <div class="col-md-3"> 
               {% include 'account/_menu.html.twig' %} 
            </div>
            
            <div class="col-md-9"> 
                <div class="d-flex justify-content-between">
                 <h5>Mes adresses</h5> 
                 <a href="{{path('app_account_adress_form')}}" class="btn btn-success">Ajouter une adresse</a>
               </div>
                 
                 {% if app.user.adresses|length == 0 %}
                        <div class="alert alert-info mt-3">
                            Vous n'avez pas encore d'adresse enregistrÃ©e
                        </div>

                  {% else %}  
                        <div class="row">
                            {% for adress in app.user.adresses %}
                                <div class="col-md-4 mt-2">
                                    <div class="bg-light p-2 text-center">
                                        <strong>{{adress.firstname}} {{adress.lastname}}</strong> <br>
                                        {{adress.adresse}} <br>
                                        {{adress.postal}} {{adress.city}} <br>
                                        {{adress.country}} <br>
                                        <a href="{{path('app_account_adress_form', {id: adress.id})}}" class="btn btn-warning btn-sm mt-2">Modifier</a>
                                        <a href="{{path('app_account_remove_adress', {id: adress.id})}}" class="btn btn-danger btn-sm mt-2">Supprimer</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>  
                 {% endif %}
                   

            </div>
        </div>
        
    </div>
{% endblock %}
