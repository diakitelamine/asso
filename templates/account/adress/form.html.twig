{% extends 'base.html.twig' %}


{% block body %}
    <div class="container my-5">
        <h1>Espace membre</h1>

        <div class="row">
            <div class="col-md-3"> {% include 'account/_menu.html.twig' %} </div>
            
            <div class="col-md-9">
                <h5>Mes adresses</h5> 
                 {{ form_start(formAdress) }}
                 <div class="row">
                        <div class="col-md-6">
                            {{ form_row(formAdress.firstname) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(formAdress.lastname) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(formAdress.adresse) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(formAdress.postal) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(formAdress.city) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(formAdress.country) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(formAdress.phone) }}
                        </div>

                 </div>
                 {{ form_end(formAdress) }}
             </div>
        </div>
        
    </div>
{% endblock %}
