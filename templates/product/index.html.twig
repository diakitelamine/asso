{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}

    <div class="container my-5">
       
       <div class="row">
         <div class="col-6">
           <img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid"> 
         </div>
            <div class="col-6">
                <small class="text-muted"><i><a href="{{path('app_category', {slug: product.category.slug})}}">{{product.category.name}} > {{product.name}} </a></i></small>
                <h1>{{product.name}}</h1>
                <span class="d-block mt-3">{{product.pricewt|price}}</span>
                <p>{{product.description|raw}}</p>
                <a  href="{{path('app_cart_add', { id: product.id }) }}"  class="btn btn-success w-100 mt-3">Ajouter au panier</a>
            </div>    
       </div>

    </div>
 
{% endblock %}
