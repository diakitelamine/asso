{% extends 'base.html.twig' %}

{% block title %}Catégorie!{% endblock %}

{% block body %}

    <div class="container my-5">
        <h1>{{category.name}}</h1>
        <p> Cette catégorie contient {{category.products|length}} produits.</p>

        <div class="row">
              {% for product in category.products %}
                <div class="col-4 text-center">
                    <a href="{{path('app_product', {slug: product.slug})}}" class="text-decoration-none">
                        <img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid">
                        <span class="d-block fw-bold  mt-3 text-black"> {{product.name}}</span>
                    </a>  
                     <span class="d-block">{{product.pricewt|price}}</span>

                </div>
              {% endfor %}
              
        </div>
        
    </div>
  
{% endblock %}
